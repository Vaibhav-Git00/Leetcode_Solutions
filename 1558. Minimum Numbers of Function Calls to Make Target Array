class Solution {
    public boolean checkeven(int nums[]){
        for(int i=0;i<nums.length;i++){
            if(nums[i]%2!=0)return false;
        }
        return true;
    }
    public  boolean allzeros(int nums[]){
        for(int i=0;i<nums.length;i++){
            if(nums[i]!=0)return false;
        }
        return true;
    }
    public int minOperations(int[] nums) {
        int opt=0;
        while(!allzeros(nums)){
            if(checkeven(nums)){
                for(int i=0;i<nums.length;i++){
                    nums[i]=nums[i]/2;
                }opt++;
            }else{
                for(int i=0;i<nums.length;i++){
                    if(nums[i]%2!=0){
                        nums[i]=nums[i]-1;
                        opt++;
                    }
                }
           }
        }
        return opt;
    }
}