
import java.util.*;
class Pair{
    Node root;
    int lin;
    Pair(Node r,int l){
        this.root=r;
        this.lin=l;
    }
}
class Solution {
    public ArrayList<Integer> bottomView(Node root) {
        ArrayList<Integer>ans=new ArrayList<>();
        TreeMap<Integer,Integer>mp=new TreeMap<>();
        if(root==null)return ans;
        Queue<Pair>q=new LinkedList<>();
        q.add(new Pair(root,0));
        
        while(!q.isEmpty()){
            Pair p=q.poll();
            Node roo=p.root;
            int li=p.lin;
            if(!mp.containsKey(li))mp.put(li,roo.data);
            else mp.put(li,roo.data);
            
            if(roo.left!=null)q.add(new Pair(roo.left,li-1));
            if(roo.right!=null)q.add(new Pair(roo.right,li+1));
            
        }
        for(int val:mp.values()){
            ans.add(val);
        }
        return ans;
        
        
    }
}