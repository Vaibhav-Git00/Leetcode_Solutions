class Solution {
    public int maxDistToClosest(int[] seats) {
        int ans=0;
        for(int i=0;i<seats.length;i++){
            if(seats[i]==0){
                int nearest=Integer.MAX_VALUE;
                for(int j=0;j<seats.length;j++){
                    if(seats[j]==1){
                        nearest=Math.min(nearest,Math.abs(i-j));
                    }
                }
                ans=Math.max(ans,nearest);
            }
        }
        return ans;
    }
}