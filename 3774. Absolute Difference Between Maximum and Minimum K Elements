class Solution {
    public int absDifference(int[] nums, int k) {
        Arrays.sort(nums);
        int n=nums.length;
        int maxsum=0;
        for(int i=n-k;i<n;i++){
            maxsum+=nums[i];
        }
        int minsum=0;
        for(int i=0;i<k;i++){
            minsum+=nums[i];
        }
        return Math.abs(maxsum-minsum);
    }
}