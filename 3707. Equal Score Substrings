class Solution {
    public boolean scoreBalance(String s) {
        int suffix[]=new int[s.length()];
        int sum=0;
        for(int i=s.length()-1;i>=0;i--){
            int num=s.charAt(i)-'a'+1;
            sum+=num;
            suffix[i]=sum;
        }
        int aage=0;
        for(int i=0;i<s.length()-1;i++){
            int num=s.charAt(i)-'a'+1;
            aage+=num;
            if(aage==suffix[i+1])return true;
            
        }
        return false;
    }
}