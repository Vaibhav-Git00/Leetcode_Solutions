class Solution {
    public boolean check(int mid,int nums[],int k){
        int count=1;
        int sum=0;
        for(int a:nums){
            if((sum+a)>mid){
                count++;
                sum=a; 
            }else{
                sum+=a;
            }
        }
        return count<=k;
    }
    public int splitArray(int[] nums, int k) {
        int l=Integer.MIN_VALUE;
        int r=0;
        for(int a : nums){
            l=Math.max(l,a);
            r+=a;
        }
        int ans=0;
        while(l<=r){
            int mid=l+(r-l)/2;
            if(check(mid,nums,k)){
                ans=mid;
                r=mid-1;
            }else{
                l=mid+1;
            }
        }
        return ans;
    }
}