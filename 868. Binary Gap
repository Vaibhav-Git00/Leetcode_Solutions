class Solution {
    public int binaryGap(int n) {
        String s=Integer.toBinaryString(n);
        int max=0;
        for(int i=0;i<s.length()-1;i++){
            char ch =s.charAt(i);
            for(int j=i+1;j<s.length();j++){
                if(ch=='1' && s.charAt(j)=='1'){
                    max=Math.max(max,j-i);
                    break;
                }
            }
        }
        return max;
    }
}