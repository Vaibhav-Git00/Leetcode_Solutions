class Solution {
    public List<Boolean> checkArithmeticSubarrays(int[] nums, int[] l, int[] r) {
        List<Boolean>newarr=new ArrayList<>();
        for(int i=0;i<l.length;i++){
            boolean s=checkk(nums,l[i],r[i]);
            newarr.add(s);
        }
        return newarr;
    }
    public boolean checkk(int nums[],int l,int r){
        int len=r-l+1;
        if(len<=2)return true;
        int arr[]=new int[len];
        for(int i=0;i<len;i++){
            arr[i]=nums[l+i];
        }
        Arrays.sort(arr);
       int diff=arr[1]-arr[0];
        for(int i=2;i<len;i++){
            if(arr[i]-arr[i-1]!=diff)return false;
        }
        return true;
    }
}