class Solution {
    public String mapWordWeights(String[] words, int[] weights) {
        HashMap<Integer,Integer>mp=new HashMap<>();
        for(int i=0;i<26;i++){
            mp.put(i,weights[i]);
        }
        HashMap<Integer,Character>as=new HashMap<>();
        int k=25;
        int a=97;
        for(int i=0;i<26;i++){
            char ch=(char)(a+k);
            as.put(i,ch);
            k--;
        }

        String result="";
        for(String s:words){
            int sum=0;
            for(char ch : s.toCharArray()){
                int ascii=ch-'a';
                sum+=mp.get(ascii);
            }
            int mod=sum%26;
            result+=as.get(mod);
        }
        return result;
    }
}