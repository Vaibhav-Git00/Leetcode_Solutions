//jab ek ko select kar raha toh usko sum kareg and jab nhi select kr raha toh age wale ke liye call kardega 
//kyuki ek conditioin given hai ki ek bhi adjacent element nhi le sakte hai aap 

class Solution {
    public int rob(int[] nums) {
        int n=nums.length;
        int dp[]=new int[n+1];
        Arrays.fill(dp,-1);
        return solve(n-1,nums,dp);
    }
    public int solve(int idx,int num[],int dp[]){
        if(idx==0)return num[0];
        if(idx<0)return 0;
        if(dp[idx]!=-1)return dp[idx];
        
        int pick=solve(idx-2,num,dp)+num[idx];
        int notpick=solve(idx-1,num,dp);
        return dp[idx]=Math.max(pick,notpick);
        
    }
}