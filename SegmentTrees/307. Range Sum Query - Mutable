class NumArray {
    int seg[];
    int n;
    public NumArray(int[] nums) {
        n=nums.length;
        seg=new int[4*n];
        build(0,0,n-1,nums);
    }
    public void build(int i,int low,int high,int nums[]){
        if(low==high){
            seg[i]=nums[low];
            return ;
        }
        int mid=(low+high)/2;
        build(2*i+1,low,mid,nums);
        build(2*i+2,mid+1,high,nums);
        seg[i]=seg[2*i+1] + seg[2*i+2];
    }
    
    public void update(int index, int val) {
        updateHelper(0,0,n-1,index,val);

    }
    public void updateHelper(int i,int low,int high,int ind,int val){
        if(low==high){
            seg[i]=val;
            return ;
        }
        int mid=(low+high)/2;
        if(ind<=mid){
            updateHelper(2*i+1,low,mid,ind,val);
        }else{
            updateHelper(2*i+2,mid+1,high,ind,val);
        }
        seg[i]=seg[2*i+1]+seg[2*i+2];
    }
    
    public int sumRange(int left, int right) {
        return query(0,0,n-1,left,right);
    }
    public int query(int i,int low,int high,int left,int right){
        if(high<left || low>right)return 0;
        if(low>=left && high<=right)return seg[i];
        int mid=(low+high)/2;
        int leftturn=query(2*i+1,low,mid,left,right);
        int rightturn=query(2*i+2,mid+1,high,left,right);
        return leftturn + rightturn;
    }
}
