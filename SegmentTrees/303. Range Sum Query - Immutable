class NumArray {
    int seg[];
    int n;
    public  NumArray(int[] nums) {
        n=nums.length;
        seg=new int[4*n];
        build(0,0,n-1,nums);
    }
    public void build(int i,int low,int high,int nums[]){
        if(low==high){
            seg[i]=nums[low];
            return;
        }
        int mid=(low+high)/2;
        build(2*i+1,low,mid,nums);
        build(2*i+2,mid+1,high,nums);
        seg[i]=seg[2*i+1]+seg[2*i+2];
    }
    
    public int sumRange(int left, int right) {
        return solve(0,0,n-1,left,right);
    }
    public int solve(int i,int low,int high,int left,int right){
        if(low>right || high<left)return 0;
        if(low>=left && high<=right)return seg[i];
        int mid=(low+high)/2;
        int leftsum=solve(2*i+1,low,mid,left,right);
        int rightsum=solve(2*i+2,mid+1,high,left,right);
        return leftsum+rightsum;
    }
}

