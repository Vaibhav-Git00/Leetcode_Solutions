class Solution {
    public int minOperations(int[] nums) {
        Stack<Integer>st=new Stack<>();
        int cnt=0;
        for(int i=0;i<nums.length;i++){
            while(!st.isEmpty()&& st.peek()>nums[i]){
                st.pop();
            }
            if(nums[i]==0)continue;
            else if(st.isEmpty()|| st.peek()<nums[i]){
                st.push(nums[i]);
                cnt++;
            }
        }
        return cnt;
    }
}