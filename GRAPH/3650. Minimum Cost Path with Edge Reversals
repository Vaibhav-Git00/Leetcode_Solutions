class Pair{
    int node;
    int weight;
    Pair(int n,int w){
        this.node=n;
        this.weight=w;
    }
}
class Solution {
    public int minCost(int n, int[][] edges) {
        ArrayList<ArrayList<Pair>>adj=new ArrayList<>();
        for(int i=0;i<n;i++)adj.add(new ArrayList<>());
        for(int edge[]:edges){
            adj.get(edge[0]).add(new Pair(edge[1],edge[2]));
            adj.get(edge[1]).add(new Pair(edge[0],edge[2]*2));
        }
        int dist[]=new int[n];
        Arrays.fill(dist,Integer.MAX_VALUE);
        dist[0]=0;
        PriorityQueue<Pair>q=new PriorityQueue<>((a,b)->a.weight-b.weight);
        q.add(new Pair(0,0));
        while(!q.isEmpty()){
            Pair p=q.poll();
            int u=p.node;
            int w=p.weight;
            for(Pair ele:adj.get(u)){
                int adjnode=ele.node;
                int adjweight=ele.weight;
                if(dist[u]+adjweight<dist[adjnode]){
                    dist[adjnode]=dist[u]+adjweight;
                    q.add(new Pair(adjnode,dist[adjnode]));
                }
            }
        }
        return dist[n-1]==Integer.MAX_VALUE?-1:dist[n-1];
    }
}